<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- bean definitions here -->
                                                    <!--Task 1-->

    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Hritik"></constructor-arg>
        <constructor-arg name="age" value="42"></constructor-arg>
        <constructor-arg name="gender" value="Male"></constructor-arg>
    </bean>

    <bean id="movie" class="com.stackroute.domain.Movie">
        <constructor-arg index="0" ref="actor"></constructor-arg>
    </bean>                                         <!--Task 1 ends-->

                                                    <!--Task 2-->
    <bean id ="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Salman"></constructor-arg>
        <constructor-arg name="age" value="48"></constructor-arg>
        <constructor-arg name="gender" value="Male"></constructor-arg>
    </bean>

    <bean id ="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Sanju"></constructor-arg>
        <constructor-arg index="1" value="Male"></constructor-arg>
        <constructor-arg index="2" value="50"></constructor-arg>
    </bean>

    <bean id ="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg type="String" value="Shahid"></constructor-arg>
        <constructor-arg type="int" value="40"></constructor-arg>
        <constructor-arg type="String" value="Male"></constructor-arg>
    </bean>

    <bean id="movie1" class="com.stackroute.domain.Movie">
        <constructor-arg index="0" ref="actor3"></constructor-arg>
    </bean>

</beans>